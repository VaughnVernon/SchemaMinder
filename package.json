{
  "name": "schema-registry-app",
  "version": "1.0.0",
  "description": "A hierarchical schema registry web application",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "preflight": "node scripts/preflight-check.js",
    "verify": "node scripts/verify-setup.js",
    "verify:quick": "node scripts/verify-setup.js --quick",
    "start:all": "node scripts/start-all.js",
    "start:all:simple": "concurrently --kill-others --names \"Backend,PartyKit,Frontend\" -c \"cyan,magenta,green\" \"npx wrangler dev --port 8789\" \"npx partykit dev --port 1999\" \"npm run dev\"",
    "dev": "npm run generate:pegjs-parser && vite",
    "build": "npm run generate:pegjs-parser && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage.enabled --ui",
    "test:coverage:watch": "vitest --coverage.enabled --watch",
    "coverage:open": "npx opener coverage/index.html",
    "complexity": "node scripts/complexity-analysis.js",
    "complexity:json": "node scripts/complexity-analysis.js && echo 'JSON report saved to complexity-report.json'",
    "complexity:html": "node scripts/complexity-analysis.js && node scripts/complexity-html.js",
    "complexity:open": "npm run complexity:html && npx opener complexity-report.html",
    "generate:pegjs-parser": "node scripts/build-pegjs-parser.js",
    "setup:database": "node scripts/setup-database.js",
    "init:database": "node scripts/init-database.js",
    "create:admin": "node scripts/create-admin-user.js",
    "wrangler:dev": "npx wrangler dev --port 8789",
    "partykit:dev": "npx partykit dev --port 1999",
    "wrangler:deploy": "wrangler pages deploy dist"
  },
  "dependencies": {
    "lucide-react": "^0.539.0",
    "partykit": "^0.0.115",
    "partysocket": "^1.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250812.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/pegjs": "^0.10.6",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "opener": "^1.5.2",
    "pegjs": "^0.10.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.28.1"
  }
}
